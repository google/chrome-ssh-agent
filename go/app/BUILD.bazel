    name = "app",
    srcs = [
        "app.go",
        "signal.go",
    ],
    importpath = "github.com/google/chrome-ssh-agent/go/app",
    visibility = ["//visibility:public"],
    deps = select({
        "@io_bazel_rules_go//go/platform:js": [
            "//go/jsutil",

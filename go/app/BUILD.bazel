go_wasm_test(
    name = "app_test",
    srcs = [
        "app_test.go",
        "signal_test.go",
    ],
    embed = [":app"],
    deps = [
        "//go/jsutil/testing",
        "@com_github_google_go_cmp//cmp",
    ],
